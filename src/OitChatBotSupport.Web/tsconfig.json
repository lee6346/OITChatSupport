{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strict": true,
    "lib": [ "dom", "es2015" ],
    "typeRoots": [ "./node_modules/@types/" ]
  },
  "exclude": [ "bin", "node_modules" ],
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true
  },
  "compileOnSave": false,
  "buildOnSave": false
}